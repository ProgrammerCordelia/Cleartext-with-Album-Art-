    ["AIMP"] = {
            AIMPSolidColor="#const_purple#",
            FooSolidColor="#const_white#",
            ITSolidColor="#const_white#", 
            SpotifySolidColor="#const_white#",
            WNPSolidColor="#const_white#", 
            JRMCSolidColor="#const_white#",
            WMPSolidColor="#const_white#", 
               },
    ["Foo"] = {
            AIMPSolidColor="#const_white#",
            FooSolidColor="#const_purple#",
            ITSolidColor="#const_white#",
            SpotifySolidColor="#const_white#",
            WNPSolidColor="#const_white#",
            JRMCSolidColor="#const_white#",
            WMPSolidColor="#const_white#",
                    },
    ["iTunes"] = {
            AIMPSolidColor="#const_white#",
            FooSolidColor="#const_white#",
            ITSolidColor="#const_purple#",
            SpotifySolidColor="#const_white#",
            WNPSolidColor="#const_white#",
            JRMCSolidColor="#const_white#",
            WMPSolidColor="#const_white#",
                     },
    ["Spotify"] = {
