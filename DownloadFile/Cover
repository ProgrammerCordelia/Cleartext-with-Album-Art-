             }
} 
            
function SetPlayer(SelectedPlayerName)
	SKIN:Bang('!WriteKeyValue Variables AIMPSolidColor "' .. PlayerTable[SelectedPlayerName]['AIMPSolidColor'] .. '" "#@#Variables.inc"')
	SKIN:Bang('!WriteKeyValue Variables FooSolidColor "' .. PlayerTable[SelectedPlayerName]['FooSolidColor'] .. '" "#@#Variables.inc"')
	SKIN:Bang('!WriteKeyValue Variables ITSolidColor "' .. PlayerTable[SelectedPlayerName]['ITSolidColor'] .. '" "#@#Variables.inc"')
	SKIN:Bang('!WriteKeyValue Variables SpotifySolidColor "' .. PlayerTable[SelectedPlayerName]['SpotifySolidColor'] .. '" "#@#Variables.inc"')
	SKIN:Bang('!WriteKeyValue Variables WNPSolidColor "' .. PlayerTable[SelectedPlayerName]['WNPSolidColor'] .. '" "#@#Variables.inc"')
	SKIN:Bang('!WriteKeyValue Variables JRMCSolidColor "' .. PlayerTable[SelectedPlayerName]['JRMCSolidColor'] .. '" "#@#Variables.inc"')
	SKIN:Bang('!WriteKeyValue Variables WMPSolidColor "' .. PlayerTable[SelectedPlayerName]['WMPSolidColor'] .. '" "#@#Variables.inc"')
end
